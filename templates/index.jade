//- Main (index.html)
extends layout

append vars
    - var bg_photo_credit = { name: "S Hassler", url: 'https://www.flickr.com/photos/sh485/' }

append javascript
    script(src='js/vendor/jquery.min.js')

block body
    body#top.full-height.font-light
        header.height-95
            .container.full-height.display-table
                .row
                    .col-lg-offset-3.col-lg-6
                        #main-logo
                        h1#text-logo.text-center LNSD

                        #info
                            h2.text-center Lorenzo Delgado Antequera
                            p.text-center Electronics &amp; Telecommunications Engineer

                        nav.text-center
                            ul
                                li
                                    a(href="/resume") resume
                                li
                                    a(href="/blog") blog
                                li
                                    a(href="/contact") contact

        footer.height-5
            .container-fluid
                .row
                    .col-lg-offset-10.col-lg-2
                        #photo-credit.font-light
                            a(href=bg_photo_credit.url)!="Photo Credit: "+bg_photo_credit.name

        // JavaScript
        script(src='js/main.js')

        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            meta(name='description', content=desc)
            meta(name='author', content=author.name+' <'+author.email+'>')
            title
                block title
                    = name


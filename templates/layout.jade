//- Base template
doctype html
block vars
html(lang='en', class=style)
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            meta(name='description', content=desc)
            meta(name='author', content=author.name+' <'+author.email+'>')

            title
                block title
                    = name

            //- TODO link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=blog.description)

            // Styling
            block styles
                link(rel='stylesheet', href='/css/main.css')
                link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
                link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:100,300,400', rel='stylesheet', type='text/css')

            //- JavaScript
            block javascript

    body
        block body
            block header
            block content
                h1 You shouldn't be watching this! :(
                p
                   |This is worse than a 404. Please
                   a(href='mailto:'+author.email) &nbsp;email me

            block footer
            //- JavaScript
            block scripts
                if analytics
                    script.
                        (function (i, s, o, g, r, a, m) {
                            i['GoogleAnalyticsObject'] = r;
                            i[r] = i[r] || function () {
                                        (i[r].q = i[r].q || []).push(arguments)
                                    }, i[r].l = 1 * new Date();
                            a = s.createElement(o),
                                    m = s.getElementsByTagName(o)[0];
                            a.async = 1;
                            a.src = g;
                            m.parentNode.insertBefore(a, m)
                        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
                        ga('create', '#{analytics}', 'auto');
                        ga('require', 'displayfeatures');
                        ga('send', 'pageview');
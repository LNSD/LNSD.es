extends blog
append vars
    - var fullUri = baseuri + '/blog/' + path

block title
    = title + " â€¢ " + name

block content
    section.container
        .row
            .col-lg-offset-2.col-lg-8
                header(style="background-image: url("+path+"/header.jpg)").cover
                    .cover-content
                        .title
                            h2!= title
                            small
                                time.timestamp(datetime=date)= moment(date).format('MMMM D, YYYY')
        .row
            .col-lg-offset-2.col-lg-8
                main.content!= contents
        .row
            .col-lg-offset-2.col-lg-8
                .social
                    ul
                        li
                            span
                                i.fa.fa-share-alt
                                | &nbsp;&nbsp;Share via:
                        li
                            a(href='mailto:?subject=' + title + '&body=' + fullUri).email
                                i.fa.fa-envelope
                                | &nbsp;Email
                        li
                            a(href='https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(title), class='popup').facebook
                                i.fa.fa-facebook
                                | &nbsp;Facebook
                        li
                            a(href='http://twitter.com/home?status=' + encodeURIComponent(title + ' ' + fullUri), class='popup').twitter
                                i.fa.fa-twitter
                                | &nbsp;Twitter
                        li
                            a(href='http://www.linkedin.com/shareArticle?mini=true&url=' + encodeURIComponent(fullUri) + '&title=' + encodeURIComponent(title), class='popup').linkedin
                                i.fa.fa-linkedin
                                | &nbsp;LinkedIn
                        li
                            a(href='https://plus.google.com/share?url=' + encodeURIComponent(fullUri), class='popup').google-plus
                                i.fa.fa-google-plus
                                | &nbsp;Google+
        .row
            .col-lg-offset-2.col-lg-8
                .comments
                    #disqus_thread

append scripts
    script.
        //- Disqus code snippet
        (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//#{name}.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();